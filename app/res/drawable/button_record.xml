<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape>
			<gradient
				android:startColor="@color/buttonPressed1"
				android:endColor="@color/buttonPressed2"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="@color/buttonStroke" />
			<corners
				android:radius="1dp" />
			<padding
				android:left="30dp"
				android:top="30dp"
				android:right="30dp"
				android:bottom="30dp" />
		</shape>
	</item>

	<item android:state_focused="true">
		<shape>
			<gradient
				android:startColor="@color/buttonFocused1"
				android:endColor="@color/buttonFocused2"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="@color/buttonStroke" />
			<corners
				android:radius="5dp" />
			<padding
				android:left="30dp"
				android:top="30dp"
				android:right="30dp"
				android:bottom="30dp" />
		</shape>
	</item>

	<item>
		<shape>
			<gradient
				android:startColor="@color/buttonNormal1"
				android:endColor="@color/buttonNormal2"
				android:angle="270" />
			<stroke
				android:width="1dp"
				android:color="@color/buttonStroke" />
			<corners
				android:radius="5dp" />
			<padding
				android:left="30dp"
				android:top="30dp"
				android:right="30dp"
				android:bottom="30dp" />
		</shape>
	</item>
</selector>
