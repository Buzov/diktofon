<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/buttonPausePressedEnd" android:startColor="@color/buttonPausePressedStart" />

            <stroke android:width="1dp" android:color="@color/buttonStroke" />

            <corners android:radius="1dp" />

            <padding android:bottom="30dp" android:left="30dp" android:right="30dp" android:top="30dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/buttonPauseFocusedEnd" android:startColor="@color/buttonPauseFocusedStart" />

            <stroke android:width="1dp" android:color="@color/buttonStroke" />

            <corners android:radius="5dp" />

            <padding android:bottom="30dp" android:left="30dp" android:right="30dp" android:top="30dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/buttonPauseEnd" android:startColor="@color/buttonPauseStart" />

            <stroke android:width="1dp" android:color="@color/buttonStroke" />

            <corners android:radius="5dp" />

            <padding android:bottom="30dp" android:left="30dp" android:right="30dp" android:top="30dp" />
        </shape></item>

</selector>